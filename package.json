{
    "name": "obsidian-tagverse",
    "version": "1.0.2",
    "description": "Transform tags into interactive universes of JavaScript-powered content",
    "main": "main.js",
    "scripts": {
        "dev": "node esbuild.config.mjs",
        "build": "npm run lint && tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "version": "node version-bump.mjs && git add manifest.json versions.json",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "keywords": [
        "obsidian",
        "obsidian-plugin",
        "tags",
        "tagverse",
        "universes",
        "interactive",
        "javascript",
        "renderer"
    ],
    "author": "brunoleos",
    "license": "MIT",
    "devDependencies": {
        "@codemirror/state": "6.5.0",
        "@codemirror/view": "6.38.1",
        "@types/node": "^24.9.0",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "builtin-modules": "^3.3.0",
        "esbuild": "^0.25.11",
        "eslint-plugin-obsidianmd": "^0.1.8",
        "obsidian": "^1.10.0",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3"
    }
}
